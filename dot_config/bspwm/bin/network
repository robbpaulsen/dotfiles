#!/usr/bin/env bash

wifi='Wifi'
bt='Bluetooth'
close='Close menu'

rofi_cmd() {
	rofi -dmenu -p "Network"
}

run_rofi(){
  echo -e "$wifi\n$bt\n$close" | rofi_cmd
}

chosen="$(run_rofi)"
case ${chosen} in
  "$wifi") "$HOME"/.config/bspwm/bin/wifi-menu ;;
  "$bt") "$HOME"/.config/bspwm/bin/bt-menu ;;
esac
