#!/usr/bin/env bash

# user specific options

# weather location (space = "+", empty = auto-detect location)
# example: "London", "Salt+Lake+City"
weather_location=""

# weather units (default = "", empty = auto-detect unit)
# ?u - USCS (farenheit, mph)
# ?m - metric (celcius, km/h)
# ?M - metric (celcius, m/s)
weather_unit=""

# current colorscheme
bsp_color=catppuccin

# gaps (default: 5)
bsp_gaps=5

# window border (default: 4)
bsp_border=4

# split ratio (default: 0.5)
bsp_split_ratio=0.5

# padding (default: 0)
bsp_top_padding=0
bsp_bottom_padding=0
bsp_left_padding=0
bsp_right_padding=0

# focus follow pointer (default: true)
bsp_focus_pointer=true

# borderless monocle (default: true)
bsp_borderless_monocle=true

# gapless monocle (default: false)
bsp_gapless_monocle=false
